{
  "manifest_version": 2,
  "name": "Pixiv Hide Works",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "pixiv-hide-works@fekoneko.com",
      "strict_min_version": "60.0"
    }
  },
  "description": "Conceals works that you don't like on Pixiv.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": ["storage", "*://*.pixiv.net/*"],
  "content_scripts": [
    {
      "matches": ["*://*.pixiv.net/*"],
      "js": ["src/start.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.pixiv.net/*"],
      "js": ["src/loaded.js"],
      "css": ["src/style.css"]
    }
  ],
  "options_ui": {
    "page": "src/options.html"
  },
  "web_accessible_resources": ["src/style.css"]
}
